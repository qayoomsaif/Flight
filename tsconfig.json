{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@all-types/*": ["all-types/*"],
      "@all-assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@navigation/*": ["navigation/*"],
      "@redux/*": ["redux/*"],
      "@screens/*": ["screens/*"],
      "@theme/*": ["theme/*"],
      "@utilities/*": ["utilities/*"],
      // Add other aliases as needed
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
